
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@section Scripts 
{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <div class="content">
        <div class="container-fluid"
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <script type="text/javascript">
                            $(document).ready(()=>{
                            var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7021/SignalRHub").build();
                            $("connstatus").text(connection.state);
                            connection.start().then(()=>{
                                $("#connstatus").text(connection.state);
                            }).catch((err)=>{console.log(err)});
                            })
                        </script>
                    </div>
                </div>
            </div>
        ></div>
    </div>
}
<div class="row">
    <div class="col-md-8 offfset-2">
        <div class="alert alert-success">Bağlantının Durumu:<strong id="connstatus"></strong></div>
    </div>
</div>